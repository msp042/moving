<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Boxes

    <a data-toggle="collapse" href="#category_boxes_new_form">
      Add box
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.boxes.each do |box| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to box, box %>

        <% if current_user == box.user %>
          <%= link_to box, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_boxes_new_form">
        <%= render partial: "categories/category_boxes_new_form" %>
      </div>
    </div>

  </ul>
</div>
