<div class="card mb-3">
  <h2 class="card-header h4">
    Box #<%= box.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= box.name %></dd>
      <!-- Display name end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= box.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Category</dt>
      <!-- Display category_id start -->
      <dd><%= box.category_id %></dd>
      <!-- Display category_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back box, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link box start -->
      <div class="col">
        <%= link_to edit_box_url(box), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link box end -->

      <!-- Delete link box start -->
      <div class="col">
        <%= link_to box, method: :delete, data: { confirm: "Do you really want to delete this box?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link box end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(box.updated_at) %> ago
  </div>
</div>
